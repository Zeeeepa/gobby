#!/bin/sh
# Gobby Task Auto-Sync Hook (post-merge)
# Automatically imports tasks from git tracking on merge/pull

# Check if gobby is installed
if command -v gobby >/dev/null 2>&1; then
    echo "Running gobby tasks sync --import --auto..."
    gobby tasks sync --import --auto
else
    # Fail silently to avoid interrupting git flow if gobby is missing
    :
fi
